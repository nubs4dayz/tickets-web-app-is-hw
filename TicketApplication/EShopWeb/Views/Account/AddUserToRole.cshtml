@model EShop.Domain.AddToRoleModel

@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add user with this email to a role:</h2>

<form asp-controller="Account" asp-action="AddUserToRole" method="post">
    <div class="form-group m-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group m-3">
        <select asp-for="SelectedRole" asp-items="new SelectList(Model.Roles)" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
